	</extension>
   <extension
         point="org.eclipse.ui.activities">
      <activity
            id="com.ampl.ide.rcp.NonLiteViews"
            name="Views not part of the Lite version">
      </activity>
      <activityPatternBinding
            activityId="com.ampl.ide.rcp.NonLiteViews"
            pattern="org\.eclipse\.team\.ui/.*">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.ampl.ide.rcp.NonLiteViews"
            pattern="org\.eclipse\.debug\.ui/.*">
      </activityPatternBinding>
      <activityPatternBinding
             activityId="com.ampl.ide.rcp.NonLiteViews"
             isEqualityPattern="true"
             pattern="org.eclipse.ui.externaltools.ExternalToolMenuDelegateToolbar">
      </activityPatternBinding>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.edit.text.openLocalFile"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+O">
      </key>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.ampl.ide.rcp.FirstTimeStartupInitializer">
      </initializer>
   </extension>

</plugin>
